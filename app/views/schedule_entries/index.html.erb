<div id="sched">
					<table>
						<tr id="headname">
							<td>Monday</td>
							<td>Tuesday</td>
							<td>Wednesday</td>
							<td>Thursday</td>
							<td>Friday</td>
						</tr>
						<% @grouped_periods.each do |period_group| %>
							<tr>
								<% period_group.each do |period| %>
									<% entry = period.schedule_entries.find {|entry| entry.user == current_user } %>
									<% interview = period.interviews.find {|interview| interview.user == current_user} %>
									<td>
										<% unless entry.nil? %>
											<% student = entry.student %>	
											<%= [student.first_name, student.last_name].join ' ' %>
											<br/>
											<%= entry.interview_type.name %>
											<% if interview.nil? %>
												<br/>
												<br/>
												<% case entry.interview_type.name %>
												<% when 'Followup Interview' %>
													<%= button_to "Conduct Interview", new_followup_interview_path(:schedule_entry_id => entry.id), :method => :get %>
												<% when 'Routine Interview' %>
													<%= button_to "Conduct Interview", new_routine_interview_path(:schedule_entry_id => entry.id), :method => :get %>	
												<% when 'Other Interview' %>
													<%= button_to "Conduct Interview", new_other_interview_path(:schedule_entry_id => entry.id), :method => :get %>	
												<% end -%>
											<% end -%>
										<% end -%>
									</td>
								<% end -%>
							</tr>
						<% end -%>
					</table>
				</div>
				
				<div id="summary">
					<table>
						<tr>
							<td>Summary:</td>
						</tr>
						<tr> 
							<td>
								Counseling:
								<li>Routine:</li>
								<li>Follow-up:</li>
								<li>Group:</li>
							</td>
							
							<td>
								Conferences:
								<li>Moderator:</li>
								<li>Teacher:</li>
								<li>Parent:</li>
							</td>
						</tr>
						
						<tr>
							
							<td colspan="2">
								Recommendations:<br/>
								<textarea name="recommendations" ></textarea><br/>
								<input type="button" name="recommendationbutton" value="submit">
							</td>
						</tr>
						<tr>
							<td colspan="2">
								Meetings:<br/>
								<textarea name="meetings"></textarea><br/>
								<input type="button" name="meetingbutton" value="submit">
							</td>
						</tr>
						<tr>													
							<td colspan="2">
								Others:<br/>
								<textarea name="others"></textarea><br/>
								<input type="button" name="otherbutton" value="submit">
							</td>
						</tr>

					</table>
					<input type="button" value="print">
				</div>
			<br style="clear:both" /> 
