<div id="counseloraccount">
	
	<!--EDIT FROM HERE ONLY FOR COUNSELOR ACCOUNT-->
	
	<div id="profile">
		<div id="graypart">
		<table>
			<tr>
				<td id="profhead" colspan="2">Profile:</td>
			</tr>
			<%= form_for @user do |f| %>
				<tr>
					<td class="label1">Email:</td>
					<td><%= f.email_field :email %></td>
				</tr>
				<tr>
					<td class="label1"><%= f.label :name %></td>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
				<td><%= f.submit "submit" %></td>
			</tr>

			<% if current_user.role == 'Head Counselor' %>
				<% @sections.each do |section| %>
					<% section_name = (section.year.to_s + section.name) %>
					<%= check_box_tag 'section[]', section_name %>	<%= section_name %>
				<% end -%>
			<% end -%>
			<% end -%>
		</table>
		</div>
	</div>
	
	<!--EDIT FROM HERE ONLY FOR COUNSELOR ACCOUNT-->
	
</div>
